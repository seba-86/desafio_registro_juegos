<%= render 'form', game: @game %>




    <tbody>
        <% @games.each do |game| %>
            <tr>
                <td><%= game.name %></td>
                <td><%= image_tag game.boardimage.variant( resize: "100x100", colorspace: 'Gray' ).processed %></td>
                <% if game.rule.present? %>
                    <td><%= game.rule.description %></td>
                <%end %>
            </tr>
        <% end %>
    </tbody>
